{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"files": {
		"includes": ["**", "!**/build/**", "!**/node_modules/**", "!.react-router/**/*.*", "!db_types.ts"]
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "origin/main"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"useNumberNamespace": "off",
				"useConst": "error",
				"noParameterAssign": "off",
				"useImportType": "warn"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noAssignInExpressions": "off",
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"noSvgWithoutTitle": "off",
				"useAriaPropsForRole": "off",
				"useSemanticElements": "off",
				"useFocusableInteractive": "off"
			},
			"correctness": {
				"noEmptyPattern": "off",
				"useExhaustiveDependencies": "off",
				"noChildrenProp": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"includes": ["**"],
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120,
		"lineEnding": "lf"
	}
}
